---
import { Image } from '@astrojs/image/components'
import Stack from '../components/layouts/Stack.astro'

export interface Props {
  src: string
  srcAlt?: string
  title: string
  href: string
}

const { src, srcAlt = '', title, href } = Astro.props
---

<div class="panel">
  <Stack>
    <div class="panel__header">
      <figure class="panel__thumbnail">
        <Image src={src} alt={srcAlt} width={400} height={240} />
      </figure>
    </div>
    <div class="panel__body">
      <Stack gap="8px">
        <p class="panel__title">{title}</p>
        <p class="panel__link"><a href={href}>詳細を見る<i class="fa-solid fa-arrow-right"></i></a></p>
      </Stack>
    </div>
    <!-- /.panel__body -->
  </Stack>
</div>

<style>

  .panel__title {
    font-size: 24px;
    font-weight: bold;
  }

  .panel__thumbnail img {
    width: 100%;
    height: auto;
  }

  .panel__link a {
    text-decoration: none;
    font-weight: bold;
  }
  .panel__link a > i{
    margin-inline-start: 4px;
  }

  .panel__link a:hover {
    text-decoration: underline;
  }
</style>
