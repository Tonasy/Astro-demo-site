---
import { Image } from '@astrojs/image/components'

import Sidebar from '../../layouts/Sidebar.astro'
import Center from '../../layouts/Center.astro'
import AnchorButton from '../../AnchorButton.astro'

import mainVisual from '../../../images/index/img-mainvisual.png'
---

<Center>
  <Sidebar contentMin="40%">
    <div class="main hero__text">
      <h1 class="hero__title">We are a digital agency from Japan.</h1>
      <p class="hero__description">
        FAKE AGENCYは企業のブランドを魅力的にアップデートするためのクリエイティブソリューションを提供するエージェンシーです。
      </p>
      <p class="hero__link">
        <AnchorButton href="/company/">会社紹介</AnchorButton>
      </p>
    </div>
    <div class="side hero__visual">
      <Image src={mainVisual} alt="" width={500} />
    </div>
  </Sidebar>
</Center>

<style>
  .hero__text {
    flex-basis: 40rem;
    flex-grow: 1;
    margin-block: auto;
  }

  .hero__visual img {
    width: 100%;
    height: auto;
  }

  .hero__title {
    font-family: 'Syne';
    font-style: normal;
    font-weight: 700;
    font-size: 4.6rem;
    line-height: 1;
    background: linear-gradient(128.99deg, #8c00db 27.63%, #dd63a3 69.13%, #9b0038 95.39%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-fill-color: transparent;
  }

  .hero__description {
    margin-block-start: 8px;
    font-size: var(--text-sixe-l);
    line-height: 1.5;
    font-weight: bold;
  }

  .hero__link {
    margin-block-start: 48px;
  }

  .with-sidebar > :first-child {
    flex-basis: 40rem;
    flex-grow: 1;
  }

  .with-sidebar > :last-child {
    flex-basis: 0;
    flex-grow: 999;
    min-inline-size: 40%;
  }

  h2 {
    font-family: 'Syne';
    font-style: normal;
    font-weight: 500;
    font-size: 64px;
    line-height: 125%;
    color: #000000;
  }
</style>
